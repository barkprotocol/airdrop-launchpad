{
    "extends": [
      "next/core-web-vitals",
      "plugin:@typescript-eslint/recommended"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "@typescript-eslint/no-unused-vars": "off", // Temporarily disable unused variable warnings
      "@typescript-eslint/no-explicit-any": "warn", // Allow 'any' type but show a warning
      "prefer-const": "error",
      "no-var": "error"
    }
  }
  